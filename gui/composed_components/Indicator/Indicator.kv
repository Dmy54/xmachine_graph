#: include ./components/LabelWithBorder/LabelWithBorder.kv

<Indicator@BoxLayout>
    size: root.size
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1, .3
        LabelWithBorder:
            text: root.header_label_text
            font_size: 20
            border_width: 2
            border_color: [1,1,1,1]
            size_hint: 1, 1
            size: self.texture_size
            pos_hint: {'center_x':0.5, 'center_y':0.5}
    BoxLayout:
        size_hint: 1, 1
        Button:
            text: 'a'
    BoxLayout:
        size_hint: 1, .3
        LabelWithBorder:
            text: root.floor_label_text
            font_size: 20
            border_width: 2
            border_color: [1,1,1,1]
            size_hint: 1, 1
            size: self.texture_size
            pos_hint: {'center_x':0.5, 'center_y':0.5}